<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <div>
    </div>
    <form action="/search" method="POST">
        <input type="text" name="title" placeholder="Games Title" required/>
        <input type="submit" name="submit" value="Search"/>   
    </form>
        
    <br>
    <fieldset class="small-6 columns">
    <a href="/add"><button>Add New Game</button></a>
        <legend>Game's list</legend>
    <table class="table table-striped table-bordered">
        <tr><th>Title</th><th>Platform</th><th>Price</th></tr>
        {{#each games}}
        <tr onclick="javascript:edit(this);">
            <td>{{title}}</td>
            <td>{{plateform}}</td>
            <td>{{price}}</td>
        </tr>
        {{/each}}
    </table>    
    
    </fieldset>
    <script>
        function edit(row) {
        var title = $(row).children().first().text();
        location.href = "/" + title;
        }
    </script>
