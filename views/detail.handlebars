
<script>
    function sure(){
        if (confirm('Are you sure to delete this game?')) {
            window.open('/rm?id={{games.id}}','_self')
        }
    }
</script>

    
    
    {{#if action}}
    <form method="POST" action="/{{action}}">
        ID : <input type="text" name="id" value="{{games._id}}" readonly/><br>
        Title: <input type="text" name="title" placeholder="Title" value="{{games.title}}" required maxlength="100"></br>
        Plateform: <input type="text" name="plateform" placeholder="Plateform" value="{{games.plateform}}" maxlength="100"></br>
        Price: <input type="text" name="price" placeholder="Price"  value="{{games.price}}"maxlength="100"></br>
    
        <button>{{#if add}}Add{{/if}}
        {{#if update}}Update{{/if}}
        </button>
    </form>
        {{#if add}}
        <a href="/"><button>Cancel</button></a>
        {{/if}}
        {{#if update}}
        <a href="#" Onclick="sure();" ><button>Remove this game</button></a>
        {{/if}}
    {{else}}
        <a href="/"><button>Go back</button></a>
    {{/if}}
    



    



    